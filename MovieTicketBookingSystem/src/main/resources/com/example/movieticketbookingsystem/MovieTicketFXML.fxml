<VBox alignment="CENTER" prefHeight="409.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.movieticketbookingsystem.MovieTicketController">
    <AnchorPane style="-fx-background-color: rgb(9, 38, 53);">
        <children>
            <AnchorPane fx:id="signIn_form" prefHeight="409.0" prefWidth="602.0" style="-fx-background-color: rgb(9, 38, 53);">
            <children>
               <Label layoutX="252.0" layoutY="102.0" text="Sign In" textFill="WHITE">
                  <font>
                     <Font name="Beirut Regular" size="30.0" />
                  </font>
               </Label>
               <TextField fx:id="signIn_username" layoutX="224.0" layoutY="160.0" promptText="Username" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-border-color: rgb(92, 131, 116); -fx-border-width: 3px; -fx-border-radius: 20px;" />
               <PasswordField fx:id="signIn_password" layoutX="224.0" layoutY="211.0" onAction="#signin" promptText="Password" style="-fx-background-color: white; -fx-background-radius: 20px; -fx-border-color: rgb(92, 131, 116); -fx-border-width: 3px; -fx-border-radius: 20px;" />
               <Button fx:id="signIn_loginBtn" layoutX="275.0" layoutY="272.0" mnemonicParsing="false" onAction="#signin" style="-fx-background-color: rgb(92, 131, 116); -fx-background-radius: 20px; -fx-border-radius: 20px;" text="Login" textFill="WHITE" />
